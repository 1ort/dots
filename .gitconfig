[include]
  path = ~/.gitconfig_user

[core]
	editor = nvim
  pager = delta

[interactive]
  diffFilter = delta

[delta]
  navigate = true
  line-numbers = true
  side-by-side = true
  minus-style = syntax "#450a15"
  plus-style = syntax "#0b4820"
  minus-emph-style = syntax "#600818"
  plus-emph-style = syntax "#175c2e"
  syntax-theme = DarkNeon

